@using Game.Web.Pages
@inherits InventoryBase

<div class="items">
    @for (int i = 0; i < 4; i++)
            {
                <div>
                    @for (int j = 0; j < 9; j++)
                    {<img class="item" src="@showItem(i*9+j)" />}
                </div>
            }
</div>

@code{
    string showItem(int position)
    {
        if (position<player.Items.Count)
        {
            return player.Items[position].imgPath;
        }
        else
        {
            return "Images/Items/default.png";
        }
    }

}